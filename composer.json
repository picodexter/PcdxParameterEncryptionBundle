{
    "name": "picodexter/parameter-encryption-bundle",
    "type": "symfony-bundle",
    "description": "Symfony PcdxParameterEncryptionBundle",
    "keywords": ["config", "parameter", "encryption"],
    "homepage": "https://picodexter.io/",
    "license": "MIT",
    "authors": [
        {
            "name": "picodexter",
            "homepage": "https://picodexter.io/"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "symfony/console":  "^2.7 || ^3.0 || ^4.0",
        "symfony/framework-bundle": "^2.7 || ^3.0 || ^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^6.2",
        "symfony/phpunit-bridge": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Picodexter\\ParameterEncryptionBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "cs": "php-cs-fixer fix -v --dry-run --diff",
        "cs-nocache": "php-cs-fixer fix -v --dry-run --diff --using-cache=no",
        "test": "phpunit -v",
        "test-coverage": "phpunit -v --coverage-text"
    },
    "abandoned": true
}
